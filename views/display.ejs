<!DOCTYPE html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>ToDo List</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" href="/css/app.css">
    </head>
    <body>
        <div class="banner-container">
            <h1 class="banner-content">
                Bounties
            </h1>
        </div>
        <div class="task-container">
            <div class="task-list">
                <form class="form-box" method="post" action="/todo">
                    <input class="input-item" name="task" id="task">
                    <button class="submit-button" type="submit">Add To List</button>
                </form>        
            </div>
            <div class="task-list">
                <% jsonBody.forEach((todo) => { %>
                    <form action="/todo/delete/<%=todo._id%>" method="POST">
                        <h2 class="todo-item"><%= todo.task %><button class="delete-button">Delete</button></h2>
                    </form>
                <% }) %>
            </div>
        </div>
        <script src="" async defer></script>
    </body>
</html>